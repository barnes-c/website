{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":semanticCommits",
        "helpers:pinGitHubActionDigests"
    ],
    "labels": [
        "dependencies"
    ],
    "pinDigests": true,
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true
        },
        {
            "matchManagers": [
                "bun",
                "npm"
            ],
            "matchDepTypes": [
                "devDependencies"
            ],
            "groupName": "dev dependencies"
        },
        {
            "matchManagers": [
                "github-actions"
            ],
            "groupName": "github actions"
        },
        {
            "matchManagers": [
                "dockerfile"
            ],
            "groupName": "docker base images"
        }
    ]
}